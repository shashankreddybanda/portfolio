<style>
  .hi {
    font-size: 5rem;
    font-weight: 800;
    margin: 0;
    padding: 0;
  }
  .LogoBar {
    display: flex;
    padding: 3.625rem var(--main-padding, 8rem);
    align-items: center;
    gap: 0.625rem;
    align-self: stretch;
  }
  .logo-box {
    display: flex;
    width: 6.25rem;
    height: 6.25rem;
    justify-content: center;
    align-items: center;
    gap: 0.625rem;
    border: 8px solid #f40076;
    border-radius: 5px;
  }
  .logo {
    font-size: 80px;
    font-weight: 900;
    color: #225dba;
  }
  .main-section {
    display: flex;
    padding: var(--hero-top-padding, 16rem) var(--main-padding, 8rem);
    flex-direction: column;
    align-items: flex-start;
    gap: 1.5rem;
  }
  .sha {
    font-size: 60px;
    font-weight: 700;
    line-height: 75px;
    letter-spacing: 0.062em;
    text-align: left;
    color: #225dba;
  }
  .hero-text {
    padding: 0;
    font-size: 3rem;
    font-weight: 100;
    letter-spacing: 0.186rem;
    margin: 0;
  }
  .project-section {
    display: flex;
    padding: 8rem var(--main-padding, 8rem);
    flex-direction: column;
    align-items: center;
    gap: 2.5rem;
    align-self: stretch;
  }
  .line {
    display: flex;
    align-items: flex-start;
    gap: 5rem;
    align-self: stretch;
    list-style: none;
    padding: 0;
  }
  @media screen and (max-width: 1450px) {
    .time {
      width: 20%;
      height: 20%;
      font-size: 3.5rem;
      line-height: 5rem;
      letter-spacing: 0.06rem;
    }
    .exp-card {
      width: 15%;
    }
  }
</style>
