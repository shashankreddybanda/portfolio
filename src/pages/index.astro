<style>
  .hi {
    font-size: 5rem;
    font-weight: 800;
    margin: 0;
    padding: 0;
  }
  .LogoBar {
    display: flex;
    padding: 0.625rem var(--main-padding, 8rem);
    align-items: center;
    gap: 0.625rem;
    align-self: stretch;
  }
  .logo-box {
    display: flex;
    width: 6.25rem;
    height: 6.25rem;
    justify-content: center;
    align-items: center;
    gap: 0.625rem;
    border: 8px solid #f40076;
    border-radius: 5px;
  }
  .logo {
    font-size: 80px;
    font-weight: 900;
    color: #225dba;
  }
  .main-section {
    display: flex;
    padding: var(--hero-top-padding, 16rem) var(--main-padding, 8rem);
    flex-direction: column;
    align-items: flex-start;
    gap: 1.5rem;
  }
  .sha {
    font-size: 60px;
    font-weight: 700;
    line-height: 75px;
    letter-spacing: 0.062em;
    text-align: left;
    color: #225dba;
  }
  .hero-text {
    padding: 0;
    font-size: 3rem;
    font-weight: 100;
    letter-spacing: 0.186rem;
    margin: 0;
  }
  
  .time-line {
    background: #f40076;
    display: flex;
    padding: 1.5rem var(--main-padding, 8rem);
    justify-content: space-between;
    align-items: center;
    align-self: stretch;
  }
  .time {
    display: flex;
    width: 12.5rem;
    height: 9.75rem;
    flex-direction: column;
    justify-content: center;
    color: #ffdaec;
    text-align: center;
    font-size: 5rem;
    font-weight: 900;
    line-height: 6rem;
    letter-spacing: 0.06rem;
  }
  .exp-card-list {
    display: flex;
    padding: 0rem var(--main-padding, 8rem);
    justify-content: space-between;
    align-items: center;
    align-self: stretch;
  }
  .exp-card {
    display: flex;
    width: 12.5rem;
    height: 12.5rem;
    padding: 0rem 1rem;
    align-items: center;
    border-radius: 5px;
    border: 5px solid var(--project-main-secondary-400, #f40076);
  }
  .servicenow {
    display: inline;
    color: #14c96b;
  }
  .asu {
    color: #ff7d00;
  }
  .hide {
    opacity: 0%;
  }
  .project-section {
    display: flex;
    padding: 5rem var(--main-padding, 8rem);
    flex-direction: column;
    align-items: center;
    gap: 0.625rem;
    align-self: stretch;
  }
  .line {
    display: flex;
    padding: 0.625rem 0rem;
    justify-content: space-between;
    align-items: stretch;
    align-self: stretch;
    list-style: none;
    margin: 0;
  }
  .footer {
    display: flex;
    padding: 2.5rem 0rem;
    flex-direction: column;
    align-items: flex-start;
    align-self: stretch;
  }
  .links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 0%;
    list-style: none;
    width: 100%;
    gap: 1rem;
  }
  .link {
    display: flex;
    padding: 0rem var(--main-padding, 8rem);
    align-items: center;
    align-self: stretch;
    font-size: 1.5rem;
    font-weight: 200;
    line-height: 3rem;
  }
  .twitter {
    background: var(--project-main-primary-400, #0d47a1);
    color: #fff;
  }
  .github {
    background: var(--project-main-primary-400, #14c96b);
    color: #db006a;
  }
  .mail {
    background: var(--project-main-primary-400, #ff8a1a);
    color: #fff;
  }
  .linkedin {
    background: var(--project-main-primary-400, #f40076);
    color: #010f26;
  }
  @media screen and (max-width: 1450px) {
    .time {
      width: 20%;
      height: 20%;
      font-size: 3.5rem;
      line-height: 5rem;
      letter-spacing: 0.06rem;
    }
    .exp-card {
      width: 15%;
    }
  }
