---
export interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="project">
	<p class="project-title">{title}</p>
	<div class="project-lables">
		<p class="project-lable">{href}</p>
		<p class="project-lable">test</p>
	</div>
	<p class="project-description">{body}</p>
</li>

<style>
	.project {
		display: flex;
		width: 15.5rem;
		padding: 1.5rem 1rem;
		flex-direction: column;
		align-items: flex-start;
		gap: 0.5rem;
		border-radius: 5px;
		border-bottom: 5px solid var(--project-main-secondary-400, #f40076);
		background: var(--project-main-primary-500, #003587);
	}
	.project-title {
		margin: 0;
		display: flex;
		width: 8.9375rem;
		height: 1.5625rem;
		flex-direction: column;
		justify-content: center;
		color: #fff;
		font-size: 1.25rem;
		font-weight: 600;
		line-height: 1.125rem;
		letter-spacing: 0.015rem;
	}
	.project-lables {
		margin: 0;
		display: flex;
		align-items: flex-start;
		gap: 0.5rem;
	}
	.project-lable {
		margin: 0;
		display: flex;
		padding: 0.125rem 0.25rem;
		justify-content: center;
		align-items: center;
		gap: 0.25rem;
		border-radius: 4px;
		background: var(--project-main-primary-100, #e4efff);
	}
	@media screen and (max-width: 1450px) {
		.project {
			width: 20%;
			padding: 1.5rem 1rem;
			gap: 0.5rem;
		}
		.project-title {
			margin: 0;
			width: 8.9375rem;
			height: 1.5625rem;
			font-size: 1.25rem;
			font-weight: 600;
			line-height: 1.125rem;
			letter-spacing: 0.015rem;
		}
	}
</style>
